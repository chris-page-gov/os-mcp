{
  "name": "os-mcp-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "containerEnv": {
    "PYTHONPATH": "src",
    "OS_API_KEY": "${localEnv:OS_API_KEY}",
    "STDIO_KEY": "${localEnv:OS_API_KEY}",
    "BEARER_TOKEN": "${localEnv:BEARER_TOKEN}"
  },
  "forwardPorts": [8000, 5173],
  "postCreateCommand": "pip install uv && uv pip install --system .[test] && (cd frontend && npm install --no-audit --no-fund || true)",
  "postStartCommand": "uv pip install --system .[test]",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "mcp": {
        // Inputs removed: rely purely on environment variables already injected via containerEnv
        "servers": {
          "osNgd": {
            "type": "stdio",
            "command": "python",
            "args": ["-m", "server", "--transport", "stdio"],
            "env": {
              // Forward existing container env vars directly (no prompts)
              "OS_API_KEY": "${env:OS_API_KEY}",
              "STDIO_KEY": "${env:STDIO_KEY}"
            },
            "dev": {
              "watch": "src/**/*.py"
            }
          }
        }
      }
    }
  }
}
