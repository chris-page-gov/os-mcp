{
  "name": "os-mcp-dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "containerEnv": {
    "PYTHONPATH": "src",
    "OS_API_KEY": "${localEnv:OS_API_KEY}",
    "STDIO_KEY": "${localEnv:OS_API_KEY}",
    "BEARER_TOKEN": "${localEnv:BEARER_TOKEN}"
  },
  "forwardPorts": [8000, 5173],
  "postCreateCommand": "pip install uv && uv pip install --system .[test] && (cd frontend && npm install --no-audit --no-fund || true)",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "mcp": {
        "inputs": [
          {
            "id": "os-api-key",
            "type": "promptString",
            "description": "Ordnance Survey Data Hub API Key",
            "password": true
          },
          {
            "id": "stdio-key",
            "type": "promptString",
            "description": "STDIO auth key (can reuse OS key)",
            "password": false
          }
        ],
        "servers": {
          "osNgd": {
            "type": "stdio",
            "command": "python",
            "args": ["-m", "server", "--transport", "stdio"],
            "env": {
              "OS_API_KEY": "${input:os-api-key}",
              "STDIO_KEY": "${input:stdio-key}"
            },
            "dev": {
              "watch": "src/**/*.py"
            }
          }
        }
      }
    }
  }
}
