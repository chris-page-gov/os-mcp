{
  "servers": {
    "os-ngd": {
      "command": "python",
      "args": ["-m", "server", "--transport", "stdio"],
      "env": {"OS_API_KEY": "${env:OS_API_KEY}", "STDIO_KEY": "dev"}
    },
    "os-ngd-http": {
      "type": "http-streamable",
      "url": "http://127.0.0.1:8000",
      "command": "python",
      "args": ["-m", "server", "--transport", "streamable-http", "--host", "127.0.0.1", "--port", "8000"],
      "env": {"OS_API_KEY": "${env:OS_API_KEY}", "BEARER_TOKENS": "dev-token"},
      "auth": {"scheme": "bearer", "token": "dev-token"}
    }
  }
}
